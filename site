    <!-- JavaScript -->
    <script>
        // Sayfa y√ºklendiƒüinde
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üéµ ACHAW PLAYER ba≈ülatƒ±lƒ±yor...');
            
            // T√ºm men√º √∂ƒüelerine tƒ±klama event'i ekle
            const menuItems = document.querySelectorAll('.menu-item');
            menuItems.forEach(item => {
                item.addEventListener('click', function() {
                    // Aktif √∂ƒüeyi g√ºncelle
                    menuItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                    
                    // √ñƒüe t√ºr√ºne g√∂re i≈ülem yap
                    const text = this.querySelector('.item-text').textContent;
                    console.log(`Men√º √∂ƒüesi se√ßildi: ${text}`);
                    
                    // √ñzel i≈ülemler
                    if (this.id === 'mp3Upload') {
                        document.getElementById('dropZone').click();
                    } else if (this.id === 'resetBtn') {
                        if (confirm('T√ºm ayarlar sƒ±fƒ±rlanacak. Emin misiniz?')) {
                            resetAllSettings();
                        }
                    }
                });
            });
            
            // Switch'ler
            const switches = document.querySelectorAll('.switch');
            switches.forEach(sw => {
                sw.addEventListener('click', function() {
                    this.classList.toggle('active');
                    const isActive = this.classList.contains('active');
                    
                    if (this.id === 'opacitySwitch') {
                        document.body.style.opacity = isActive ? '0.9' : '1';
                    } else if (this.id === 'invertSwitch') {
                        document.body.style.filter = isActive ? 'invert(1)' : 'none';
                    }
                });
            });
            
            // S√ºr√ºkle bƒ±rak alanƒ±
            const dropZone = document.getElementById('dropZone');
            
            dropZone.addEventListener('dragover', function(e) {
                e.preventDefault();
                this.classList.add('dragover');
            });
            
            dropZone.addEventListener('dragleave', function() {
                this.classList.remove('dragover');
            });
            
            dropZone.addEventListener('drop', function(e) {
                e.preventDefault();
                this.classList.remove('dragover');
                
                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    handleFileUpload(files[0]);
                }
            });
            
            dropZone.addEventListener('click', function() {
                // Gizli file input olu≈ütur
                const input = document.createElement('input');
                input.type = 'file';
                input.accept = 'audio/mp3,audio/*';
                input.onchange = function(e) {
                    if (e.target.files[0]) {
                        handleFileUpload(e.target.files[0]);
                    }
                };
                input.click();
            });
            
            // G tu≈üu ile g√∂r√ºnmez mod
            document.addEventListener('keydown', function(e) {
                if (e.key === 'g' || e.key === 'G') {
                    toggleInvisibleMode();
                }
                
                // Space tu≈üu ile play/pause
                if (e.key === ' ') {
                    e.preventDefault();
                    togglePlayPause();
                }
            });
            
            // Play butonu
            const playBtn = document.querySelector('.control-btn.play');
            playBtn.addEventListener('click', togglePlayPause);
            
            // Fonksiyonlar
            function handleFileUpload(file) {
                console.log(`Dosya y√ºklendi: ${file.name}`);
                
                // Dosya ismini g√∂ster
                const songTitle = file.name.replace('.mp3', '');
                document.querySelector('.song-info h3').textContent = songTitle;
                
                // Y√ºkleme bildirimi
                showNotification(`${file.name} y√ºklendi!`);
            }
            
            function togglePlayPause() {
                const playIcon = document.querySelector('.control-btn.play i');
                const isPlaying = playIcon.classList.contains('fa-play');
                
                if (isPlaying) {
                    playIcon.classList.remove('fa-play');
                    playIcon.classList.add('fa-pause');
                    console.log('Oynatƒ±lƒ±yor...');
                } else {
                    playIcon.classList.remove('fa-pause');
                    playIcon.classList.add('fa-play');
                    console.log('Duraklatƒ±ldƒ±...');
                }
            }
            
            function toggleInvisibleMode() {
                document.body.style.opacity = document.body.style.opacity === '0.1' ? '1' : '0.1';
                console.log('G√∂r√ºnmez mod: ' + (document.body.style.opacity === '0.1'));
                
                showNotification(
                    document.body.style.opacity === '0.1' 
                    ? 'G√∂r√ºnmez mod AKTƒ∞F' 
                    : 'G√∂r√ºnmez mod PASƒ∞F'
                );
            }
            
            function resetAllSettings() {
                // T√ºm switch'leri sƒ±fƒ±rla
                switches.forEach(sw => {
                    sw.classList.remove('active');
                    sw.querySelector('.switch-knob').style.transform = '';
                });
                
                // CSS reset
                document.body.style.opacity = '1';
                document.body.style.filter = 'none';
                
                // ≈ûarkƒ± bilgilerini sƒ±fƒ±rla
                document.querySelector('.song-info h3').textContent = 'nini nini nini';
                
                console.log('T√ºm ayarlar sƒ±fƒ±rlandƒ±');
                showNotification('T√ºm ayarlar sƒ±fƒ±rlandƒ±!');
            }
            
            function showNotification(message) {
                // Basit bildirim
                const notification = document.createElement('div');
                notification.style.cssText = `
                    position: fixed;
                    bottom: 20px;
                    right: 20px;
                    background: var(--accent);
                    color: var(--bg-dark);
                    padding: 12px 20px;
                    border-radius: 8px;
                    font-weight: 600;
                    z-index: 1000;
                    animation: fadeInOut 2s ease;
                `;
                
                notification.textContent = message;
                document.body.appendChild(notification);
                
                setTimeout(() => {
                    notification.remove();
                }, 2000);
            }
            
            // CSS i√ßin animation ekle
            const style = document.createElement('style');
            style.textContent = `
                @keyframes fadeInOut {
                    0% { opacity: 0; transform: translateY(10px); }
                    10% { opacity: 1; transform: translateY(0); }
                    90% { opacity: 1; transform: translateY(0); }
                    100% { opacity: 0; transform: translateY(10px); }
                }
            `;
            document.head.appendChild(style);
            
            console.log('‚úÖ ACHAW PLAYER hazƒ±r!');
            showNotification('ACHAW PLAYER hazƒ±r! üéµ');
        });
    </script>
</body>
</html>
